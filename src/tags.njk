---
layout: "base.njk"
pagination:
    data: collections
    size: 1
    alias: tag
permalink: /tags/{{ tag }}/
---
<div class="secondary-button">
<svg xmlns="http://www.w3.org/2000/svg" xmlns:xlink="http://www.w3.org/1999/xlink" fill="#000000" height="15px" width="15px" version="1.1" id="Layer_1" viewBox="0 0 476.213 476.213" xml:space="preserve">
<polygon points="476.213,223.107 57.427,223.107 151.82,128.713 130.607,107.5 0,238.106 130.607,368.714 151.82,347.5   57.427,253.107 476.213,253.107 "/>
</svg>
<button onclick="history.back()">Back</button>
</div>

   <h1>Tagged "{{ tag }}"</h1>
   <ul class="articles-list">

     {% set taglist = collections[tag] %}
     {% for article in taglist | reverse %}
       <li><a href="{{ article.url }}"><h2>{{ article.data.title }}</h2></a>
       
<span>{{ article.data.date | date }}</span>

<p>{{ article.data.excerpt }}</p>


</li>
{% endfor %}

</ul>       